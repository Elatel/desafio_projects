<% if @project.errors.any? %>
    <div id ="error_explanation">
        <h2>
            <%= pluralize(@project.errors.count, "error") %>
            Your post is wrong
        </h2>
        <ul>
            <% @project.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<%else %>
    <h2>Se ha creado el proyecto con exito</h2>
<% end %>

